<div class="flex col container centered">

	<form class="flex col centered wrapper" action="/add" method="post">
		<label class="centered" for="reg-input">Registration Number</label>
		{{#if message.text}}
		<div class="centered {{message.type}} message">{{message.text}}</div>
		{{/if}}
		<input class="centered reg-plate" type="text" name="reg-input" id="reg-input" maxlength="10" autocomplete="off">
		<div class="flex row">
			<button type="submit">ADD</button>
			<button type="submit" name="reset" formaction="/clear">CLEAR</button>
		</div>
	</form>

	<form class="centered wrapper" action="/filter" method="post">
		{{!-- <label for="town-filter">Filter</label> --}}
		<select class="centered" name="town-filter" id="">
			<option value="AA">All</option>
			{{#each towns}}
			<option value="{{town_code}}" {{#if selected}}selected{{/if}}>{{town_name}}</option>
			{{/each}}
		</select>
		<button type="submit">Filter</button>
	</form>

	<div class="reg-display flex col wrap centered wrapper">
		{{#each regList}}
		<div class="reg-plate {{town_code}}">{{reg_num}}</div>
		{{/each}}
		{{#if empty}}
		<div>There are no registration numbers to display</div>
		{{/if}}
	</div>
</div>