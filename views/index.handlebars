<div class="flex col container centered">

	<form class="flex col centered wrapper" action="/add" method="post">
		<label class="centered" for="reg-input">Registration Number</label>
		{{#if message.text}}
		<div class="centered {{message.type}} message">{{message.text}}</div>
		{{/if}}
		<input class="centered reg-plate" type="text" name="reg-input" id="reg-input" maxlength="10" autocomplete="off">
		<button type="submit">ADD</button>
	</form>

	<form class="centered wrapper" action="/clear" method="post">
		{{!-- <label for="town-filter">Filter</label> --}}
		<select class="centered" name="town-filter" id="">
			<option value="AA" selected>All</option>
			{{#each towns}}
			<option value="{{town_code}}">{{town_name}}</option>
			{{/each}}
		</select>
		<button type="submit" name="reset">CLEAR</button>
	</form>

	<div class="reg-display flex row wrap centered wrapper">
		{{#each regList}}
		<div class="reg-plate centered" title="{{town_code}}">{{reg_num}}</div>
		{{/each}}
		<div class="no-plates hidden">There are no registration numbers to display</div>
	</div>
</div>